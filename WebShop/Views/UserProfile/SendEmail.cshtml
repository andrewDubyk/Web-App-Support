@{ 
    ViewData.AddActivePage(UserProfileMenuNavPages.SendEmail);
}

<h2>Send email to all users</h2>

<form asp-action="SendEmail" method="post">
    <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" id="subject" name="subject" class="form-control" placeholder="enter email subject">
    </div>
    <div class="form-group">
        <label for="text">Example textarea</label>
        <textarea class="form-control" id="text" name="text" rows="3" placeholder="message for users"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-success" />
    </div>

    <h4>After submitting it may take a few minutes</h4>
</form>